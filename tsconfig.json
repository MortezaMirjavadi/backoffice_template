{
  "compilerOptions": {
     "lib": ["dom", "es2015"],
     "target": "ESNext",
     "module": "ESNext",
     "moduleResolution": "Bundler",
     "esModuleInterop": true,
     "allowJs": true,
     "strict": true,
     "skipLibCheck": true,
     "outDir": "dist",
     "types": ["node"],
     "baseUrl": ".",
     "paths": {
       "@/*": ["src/*"],
       "ui": ["src/components/ui"],
       "ui/*": ["src/components/ui/*"],
       "shared-ui/*": ["src/components/shared/*"]
     },
     "jsx": "react-jsx",
     "jsxImportSource": "react"
  },
  "include": ["src/**/*", "apps/**/*", "*.ts", "*.tsx"]
}